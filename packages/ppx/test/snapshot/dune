; This tests ensure the ppx transformations works, but the generated code doesn't need to type-check to make it pass.
; If you are looking for CSS Support tests check packages/ppx/test/native/ folder

(subdir
 reason
 (cram
  (alias test-ppx-snapshot-reason)
  (deps
   %{bin:standalone}
   %{bin:refmt}
   (package styled-ppx))))

(subdir
 rescript
 (cram
  (alias test-ppx-snapshot-rescript)
  (enabled_if
   (= %{env:OPAM_REPO_CI=false} false))
  (deps
   %{bin:rewriter}
   (package styled-ppx))))
