{
  "name": "@davesnx/styled-ppx",
  "version": "0.34.1",
  "description": "Typed styled components in ReScript",
  "author": "David Sancho <dsnxmoreno@gmail.com>",
  "license": "BSD-2",
  "homepage": "https://styled-ppx.vercel.app",
  "keywords": [
    "rescript", "reason", "ocaml", "ppx", "bucklescript", "css",
    "styled-components", "emotion", "styled", "components", "CSS-in-JS"
  ],
  "bugs": { "url": "https://github.com/davesnx/styled-ppx/issues" },
  "repository": {
    "type": "git",
    "url": "https://github.com/davesnx/styled-ppx.git"
  },
  "esy": {
    "buildsInSource": "_build",
    "build": [ [ "dune", "build", "--root", "." ] ],
    "buildDev": "dune build --promote-install-files --root .",
    "buildEnv": { "ODOC_SYNTAX": "re" },
    "release": { "bin": [ "ppx" ] }
  },
  "devDependencies": {
    "@opam/alcotest": "1.7.0",
    "@opam/dune": "3.4.1",
    "@opam/menhir": "20220210",
    "@opam/ocaml-lsp-server": "1.15.1-4.14",
    "@opam/ocaml-migrate-parsetree": "2.4.0",
    "@opam/ocamlformat": "0.24.1",
    "@opam/ppx_deriving": "5.2.1",
    "@opam/ppxlib": "*",
    "@opam/reason": "*",
    "@opam/sedlex": "3.0",
    "ocaml": "4.14.0"
  },
  "resolutions": {
    "@opam/ppxlib":
      "ocaml-ppx/ppxlib:ppxlib.opam#8b8987c5690ad839348d96bf52471b03b88f06ed",
    "@opam/reason":
      "reasonml/reason:reason.opam#b283f335f90e3aaa398bff8e82761038ee42a99d",
    "@opam/ocamlfind": "1.9.5"
  },
  "scripts": {
    "test_typecheck": "dune build @native_typecheck_test",
    "test_css_support": "dune build @css_support_test",
    "test_ppx_snapshot": "dune build @ppx_snapshot_test",
    "test_ppx_snapshot_promote":
      "dune build @ppx_snapshot_test --auto-promote",
    "test_parser": "dune build @parser_test",
    "test_css_lexer": "dune build @css_lexer_test",
    "test_reason_css_parser": "dune build @reason_css_parser_test",
    "test_css_spec_parser": "dune build @css_spec_parser_test",
    "test_css_spec_types": "dune build @css_spec_types_test",
    "test_bs":
      "yarn --cwd 'packages/ppx/test/browser' build; yarn --cwd 'packages/ppx/test/browser' test",
    "dev": "dune build --root . --watch",
    "release-static":
      "esy b dune build --root . --ignore-promoted-rules --no-config --profile release-static --only-packages styled-ppx",
    "ast": "dune exec packages/renderer/ast_renderer.exe --",
    "lexer": "dune exec packages/renderer/lexer_renderer.exe --",
    "interpreter":
      "esy menhir --interpret --interpret-show-cst packages/parser/lib/css_parser.mly"
  },
  "dependencies": { "@opam/ocaml-lsp-server": "1.13.0" }
}
